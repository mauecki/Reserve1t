<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/opis_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Opis"
        app:layout_constraintBottom_toBottomOf="@+id/opis_tv"
        app:layout_constraintStart_toEndOf="@+id/opis_tv"
        app:layout_constraintTop_toTopOf="@+id/opis_tv" />

    <TextView
        android:id="@+id/kategoria_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="kategoria"
        app:layout_constraintBottom_toBottomOf="@+id/kategoria_tv"
        app:layout_constraintStart_toEndOf="@+id/kategoria_tv"
        app:layout_constraintTop_toTopOf="@+id/kategoria_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/ulica_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ulica"
        app:layout_constraintBottom_toBottomOf="@+id/ulica_tv"
        app:layout_constraintStart_toEndOf="@+id/ulica_tv"
        app:layout_constraintTop_toTopOf="@+id/ulica_tv" />

    <TextView
        android:id="@+id/ulica_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Ulica i nr:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miasto_tv" />

    <TextView
        android:id="@+id/miasto_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="miasto"
        app:layout_constraintBottom_toBottomOf="@+id/miasto_tv"
        app:layout_constraintStart_toEndOf="@+id/miasto_tv"
        app:layout_constraintTop_toTopOf="@+id/miasto_tv" />

    <TextView
        android:id="@+id/mail_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="adres"
        app:layout_constraintBottom_toBottomOf="@+id/mail_tv"
        app:layout_constraintStart_toEndOf="@+id/mail_tv"
        app:layout_constraintTop_toTopOf="@+id/mail_tv" />

    <TextView
        android:id="@+id/telefon_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="numer"
        app:layout_constraintBottom_toBottomOf="@+id/telefon_tv"
        app:layout_constraintStart_toEndOf="@+id/telefon_tv"
        app:layout_constraintTop_toTopOf="@+id/telefon_tv" />

    <TextView
        android:id="@+id/wlasciciel_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="wlasciciel"
        app:layout_constraintBottom_toBottomOf="@+id/wlasciciel_tv"
        app:layout_constraintStart_toEndOf="@+id/wlasciciel_tv"
        app:layout_constraintTop_toTopOf="@+id/wlasciciel_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nazwa_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="nazwa"
        app:layout_constraintBottom_toBottomOf="@+id/nazwa_tv"
        app:layout_constraintStart_toEndOf="@+id/nazwa_tv"
        app:layout_constraintTop_toTopOf="@+id/nazwa_tv" />

    <TextView
        android:id="@+id/id_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="id"
        app:layout_constraintBottom_toBottomOf="@+id/id_tv"
        app:layout_constraintStart_toEndOf="@+id/id_tv"
        app:layout_constraintTop_toTopOf="@+id/id_tv" />

    <TextView
        android:id="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Id firmy: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/nazwa_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Nazwa firmy: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv" />

    <TextView
        android:id="@+id/wlasciciel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Właściciel: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nazwa_tv" />

    <TextView
        android:id="@+id/telefon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Numer telefonu: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wlasciciel_tv" />

    <TextView
        android:id="@+id/mail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Adres email:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefon_tv" />

    <TextView
        android:id="@+id/miasto_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Miasto: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail_tv" />

    <TextView
        android:id="@+id/kategoria_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Kategoria: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ulica_tv" />

    <TextView
        android:id="@+id/opis_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="Opis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kategoria_tv" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_store_mall_directory_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/rate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/reserve_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_star_rate_24"


        android:tint="#000000"
        app:backgroundTint="#FFFFFF"
        app:rippleColor="#000000"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reserve_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:backgroundTint="#FF784D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FBFBFB"
        app:srcCompat="@drawable/ic_baseline_calendar_today_24" />
</androidx.constraintlayout.widget.ConstraintLayout>